    ),
    'blockify-page-title' => array(
      'title' => t('Page title'),
      'description' => t('The current page title'),
    ),
    'blockify-tabs' => array(
      'title' => t('Local tasks tabs'),
      'description' => t('Local tasks tabs'),
    ),
    'blockify-messages' => array(
      'title' => t('Messages'),
