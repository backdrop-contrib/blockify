/**
 * Verify if a given blockify block is enabled in the blockify admin settings.
 */
function _blockify_is_enabled($delta) {
  $blocks = config_get('blockify.settings', 'blockify_blocks');
  if (!empty($blocks[$delta])) {
    return TRUE;
  }
  return FALSE;
}

